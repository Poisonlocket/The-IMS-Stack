---
import { getCollection } from "astro:content"  // Note the colon after astro
import "../assets/app.css"
import Landing_nav from "../components/landing_nav.astro";
import Root_layout from "../layouts/root_layout.astro";
import Blog_prev_card from "../components/blog_prev_card.astro";

const posts = await getCollection("posts");
const sortedPosts = posts.sort((a, b) => {
 return new Date(b.data.date).getTime() - new Date(a.data.date).getTime();
});
console.log(sortedPosts[0].data.authors.join(", "))
---

<Root_layout title='About'>
 <Landing_nav />
 <div class='h-32 bg-base-200 flex items-center justify-center'>
 <label class="input">
  <svg class="h-[1em] mr-2 opacity-50" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
   <g
       stroke-linejoin="round"
       stroke-linecap="round"
       stroke-width="2.5"
       fill="none"
       stroke="currentColor"
   >
    <circle cx="11" cy="11" r="8"></circle>
    <path d="m21 21-4.3-4.3"></path>
   </g>
  </svg>
  <input type="search" class="input-lg" height='100' placeholder="Such einen Post" />

 </label>
 </div>
 <div class='h-96 bg-base-200 flex flex-col items-center'>
  <Blog_prev_card
      class=''
      width='w-[80%] max-w-[40rem]'
      image_path='/src/assets/author_images/author_image_lorenzo_bonometti.jpg'
      title={sortedPosts[0].data.title}
      description={sortedPosts[0].data.description}
      read_time={sortedPosts[0].data.reading}
      authors={sortedPosts[0].data.authors.join(", ")}
  />
 </div>
</Root_layout>