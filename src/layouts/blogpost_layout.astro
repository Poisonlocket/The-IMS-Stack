---
import "../assets/app.css"
import Root_layout from "./root_layout.astro";
import Landing_nav from "../components/landing_nav.astro";
import {Image} from "astro:assets";
interface Postdata {
    post: {
        id:string
        data: {
            title: string;
            description: string;
            reading: string;
            authors: string[];
            related_posts: string[];
            topicTags: string[];
            date: string;
            previewImagePath: string;
        };
    };
}

const postdata = Astro.props as Postdata;
console.log(postdata.post.id)

const styles= {

}
---

<Root_layout>
    <Landing_nav />
    <div class='h-2 bg-base-200'></div>
    <div class='mx-auto mt-32 px-80 w-full'>
        <div class='flex items-center justify-center'>
        <img alt="alt" class='rounded-md w-[60%] h-[60%] ' src={postdata.post.data.previewImagePath}  />
        </div>
        <article>
        <h1 class='bg-base-200  text-5xl font-semibold'>{postdata.post.data.title}</h1>
        <p class='text-secondary mt-4'>{postdata.post.data.description}</p>
    </article>
    <br />
    <div class="content flex flex-col text-justify markdown-content">
        <slot />
    </div>
    </div>
</Root_layout>