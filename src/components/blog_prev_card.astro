
---
import { Image } from "astro:assets";

interface props {
    title: string
    description: string
    image_path: string
    read_time: number
    authors: string
    width: string
}

const { title, description, image_path, read_time, authors, width = "w-96" } = Astro.props;
---

<div class=`card bg-base-100 ${width} shadow-sm` >
    <figure>
        <Image
          width="10"
          height="250"

          format="webp"
          fit="cover"
          quality={80}
          aspectRatio="16:9"
                class='max-h-48 w-full object-center'
                src={image_path}
                alt={title} />
    </figure>
    <div class="card-body ">
        <h2 class="card-title">{title}</h2>
        <div class='text-xs text-secondary'>Lesezeit:  {read_time} Minuten - {authors} </div>
        <p>{description}</p>
        <div class="card-actions justify-end">
            <button class="btn btn-primary mt-1">Jetzt reinlesen</button>
        </div>
    </div>
</div>